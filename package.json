{
  "name": "koa-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "tsc -p tsconfig.json && pm2 start ecosystem.config.js --env production",
    "server": "nodemon --watch ./app -e ts --exec ts-node ./app/app.ts",
    "stop": "pm2 stop koa-app",
    "dev": "cross-env NODE_ENV=development webpack -w --config=webpack.config.js",
    "build": "cross-env NODE_ENV=production webpack --config=webpack.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "ecosystem": "^0.2.0",
    "ejs": "^3.1.2",
    "koa": "^2.11.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.1",
    "pm2": "^4.4.0",
    "zepto": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@types/koa": "^2.11.3",
    "@types/koa-router": "^7.4.0",
    "@types/koa-views": "^2.0.4",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "exports-loader": "^0.7.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-import": "^1.12.2",
    "eslint": "^5.8.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.2.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.3",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-pxtorem": "^5.1.1",
    "postcss-url": "^8.0.0",
    "sass-loader": "^8.0.2",
    "script-loader": "^0.7.2",
    "ts-node": "^8.9.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "env": {
      "browser": true
    },
    "extends": [
      "standard"
    ],
    "plugins": [
      "promise",
      "html",
      "node",
      "import"
    ],
    "rules": {
      "generator-star-spacing": "off",
      "no-debugger": "error",
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": "off",
      "no-return-await": "off"
    }
  }
}
